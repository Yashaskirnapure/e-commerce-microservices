{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["../types", "./node_modules/@types"],
    "composite": true,
    "baseUrl": ".",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "../types/**/*"],
  "references": [
    { "path": ".." }
  ]
}