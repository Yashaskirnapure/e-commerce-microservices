{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "composite": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["types/**/*"],
  "references": [
    { "path": "auth-service" },
    { "path": "inventory-service" },
    { "path": "product-service" },
    { "path": "api-gateway" }
  ]
}
