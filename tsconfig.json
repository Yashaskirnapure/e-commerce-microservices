{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "composite": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true
  },
  "include": ["types/**/*"],
  "exclude": ["node_modules", "**/dist", "**/build"],
  "references": [
    { "path": "./auth-service" },
    { "path": "./inventory-service" },
    { "path": "./product-service" },
    { "path": "./api-gateway" }
  ]
}